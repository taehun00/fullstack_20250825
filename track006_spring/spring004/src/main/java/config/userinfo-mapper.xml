<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thejoa703.dao.UserInfoDao">
  <insert id="insert"	parameterType="com.thejoa703.dto.UserInfoDto">
  	insert into userinfo (no, email, age)  values ( userinfo_seq.nextval, #{email}, #{age} )
  </insert>
  <select resultType="UserInfoDto" id="selectAll">
  	select * from userinfo  order by no desc
  </select>
  <select resultType="UserInfoDto" id="select" parameterType="int">
  	select * from userinfo  where  no=#{no}
  </select>
  <update id="update" parameterType="com.thejoa703.dto.UserInfoDto">
  	update userinfo  set  email=#{email} , age=#{age} where no=#{no}
  </update>
  <delete id="delete" parameterType="int">
  	delete from userinfo  where  no=#{no}
  </delete>
</mapper>